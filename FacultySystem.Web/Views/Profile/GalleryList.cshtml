@model ContentManagementSystem.Models.ViewModels.GalleriesIndexViewModel
@{
    ViewBag.Title = ViewBag.Title;
    Layout = MVC.Shared.Views._LayoutProfessorNew;
}

@{
    Html.RenderAction(MVC.Profile.TopMenu());
}

<div id="page_content">
    <div id="page_content_inner" style="padding-bottom: 0;">
        <div class="uk-grid" data-uk-grid-margin="">
            <div class="uk-width-1-1 uk-container uk-container-center mt-90">
                <div class="md-card">
                    <div class="md-card-content uk-overflow-container">
                        <div class="heading_a uk-text-center"><span class="uk-badge heading_a persian-number">@($"لیست گالری های {Model.Fullname}")</span></div>
                        <table class="uk-table mt-25 mb-30">
                            <thead>
                                <tr>
                                    <th class="table-header heading_a">نام گالری</th>
                                    <th class="uk-text-center table-header heading_a">تاریخ ایجاد</th>
                                    <th class="uk-text-center table-header heading_a">توضیحات</th>
                                    <th class="uk-text-center table-header heading_a"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gallery in Model.UserGalleries)
                                {
                                    <text>
                                        <tr class="uk-table-middle">
                                            <td class="uk-width-3-10">
                                                @*@if (!string.IsNullOrEmpty(lesson.Link))
                                                {
                                                    <span class="cl-effect-1"><a href="@lesson.Link" target="_blank" rel="nofollow"><span class="persian-number">@lesson.LessonName</span></a></span>
                                                }
                                                else
                                                {*@
                                                <span class="cl-effect-1"><a href="@Url.RouteUrl("Profile", new { action = MVC.Profile.ActionNames.Gallery, id = gallery.GalleryId, title = gallery.UrlSlug })"><span class="persian-number">@gallery.Title</span></a></span>
                                                @*}*@
                                            </td>
                                            <td class="uk-width-1-10">
                                                <div class="uk-text-muted professor-sub-detail pr-30"><span class="persian-number">@gallery.CreateDateText</span></div>
                                            </td>
                                            <td class="uk-width-5-10">
                                                @if (!string.IsNullOrEmpty(gallery.Description))
                                                {
                                                    <div class="uk-text-muted professor-sub-detail pr-30">@Html.Raw(gallery.Description.Replace("\n", "<br />").Replace("\r\n", "<br />"))</div>
                                                }
                                            </td>
                                            <td class="uk-width-1-10 uk-text-center fs-09e"><a href="@Url.RouteUrl("Profile", new { action = MVC.Profile.ActionNames.Gallery, id = gallery.GalleryId, title = gallery.UrlSlug })" class="md-btn md-btn-success md-btn-block waves-effect waves-button waves-red" title="ورود به گالری" data-uk-tooltip="{pos: 'top', cls: 'fs-16p'}">ورود <i class="material-icons" style="font-size: 15px; vertical-align: -5px;">chevron_left</i></a></td>
                                        </tr>
                                    </text>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
