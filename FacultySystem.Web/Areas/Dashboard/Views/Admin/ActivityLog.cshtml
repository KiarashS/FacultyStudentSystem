@{
    ViewBag.Title = "لاگ فعالیت ها";
    Layout = MVC.Dashboard.Shared.Views._ProfessorMasterLayout;
}


<div id="page_content">
    <div id="page_content_inner">

        <h3 class="heading_b uk-margin-bottom">لاگ فعالیت ها</h3>

        <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium" data-uk-grid-margin>
            <div style="width: 100%;">
                <div class="md-card">
                    <div class="md-card-content">
                        <ul class="md-list md-list-addon md-list-right">
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-primary">notifications</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">توجه</span>
                                    <span class="uk-text-medium uk-text-muted">این لیست شامل لاگ های ثبت شده در یک ماه اخیر می باشد.</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium" data-uk-grid-margin>
            <div style="width: 100%;">
                <div class="md-card">
                    <div class="md-card-content">
                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                                <div class="md-input-wrapper"><label>ایمیل کاربر</label><input type="text" data-parsley-required="true" class="md-input uk-text-right" dir="ltr" id="filter-email" name="filter-email"><span class="md-input-bar "></span></div>
                            </div>
                            <div class="uk-width-small-1-1 uk-width-medium-1-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                                <div class="md-btn-group">
                                    <button type="button" id="admin-logs-search" class="md-btn md-btn-primary md-btn-large waves-effect waves-button waves-light"><i class="material-icons" style="font-size:24px; vertical-align: -10px;">search</i> جستجو</button>
                                    <button type="button" id="admin-logs-refresh" class="md-btn md-btn-large waves-effect waves-button waves-default" data-uk-tooltip="{pos:'top', cls:'fs-16p'}" title="بارگذاری مجدد"><i class="material-icons" style="font-size:24px; vertical-align: -10px;">refresh</i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-content">
                <div id="activitylogs_crud">
                </div>
            </div>
        </div>

    </div>
</div>


