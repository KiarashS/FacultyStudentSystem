@{
    ViewBag.Title = "مدیریت تماس ها";
    Layout = MVC.Dashboard.Shared.Views._ProfessorMasterLayout;
}


<div id="page_content">
    <div id="page_content_inner">

        <h3 class="heading_b uk-margin-bottom">مدیریت تماس ها</h3>

        <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium" data-uk-grid-margin>
            <div style="width: 100%;">
                <div class="md-card">
                    <div class="md-card-content">
                        <ul class="md-list md-list-addon md-list-right">
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-primary">notifications</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">توجه</span>
                                    <span class="uk-text-medium uk-text-muted">پس از رسیدگی به هر یک از پیام ها، حتماً بر روی دکمه پاسخ کلیلک کرده و در صورت نیاز پاسخ خود را نیز وارد کنید (وارد کردن پاسخ اختیاری می باشد) و سپس حتماً دکمه ارسال را کلیک کنید تا کاربر از رسیدگی به درخواستش مطلع گردد.</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-content">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                        <div class="md-input-wrapper"><label>نام خانوادگی</label><input type="text" data-parsley-required="true" class="md-input" id="filter-lastname" name="filter-lastname"><span class="md-input-bar "></span></div>
                    </div>
                    <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                        <div class="md-input-wrapper"><label>ایمیل</label><input type="text" data-parsley-required="true" class="md-input uk-text-right" dir="ltr" id="filter-email" name="filter-email"><span class="md-input-bar "></span></div>
                    </div>
                    <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                        <div class="md-input-wrapper"><label>شناسه پروفایل</label><input type="text" data-parsley-required="true" class="md-input uk-text-right" dir="ltr" id="filter-pageid" name="filter-pageid"><span class="md-input-bar "></span></div>
                    </div>
                    <div class="uk-width-small-1-1 uk-width-medium-1-10 uk-width-large-1-10 uk-width-xLarge-1-10">
                        <label for="filter-isbanned">فقط پیام های معلق؟</label><br />
                        <input type="checkbox" data-switchery="true" id="filter-pending-only" name="filter-pending-only" data-switchery-color="#1e88e5" />
                    </div>
                    <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                        <div class="md-btn-group">
                            <button type="button" id="admin-adminmessages-search" class="md-btn md-btn-primary md-btn-large waves-effect waves-button waves-light"><i class="material-icons" style="font-size:24px; vertical-align: -10px;">search</i> جستجو</button>
                            <button type="button" id="admin-adminmessages-refresh" class="md-btn md-btn-large waves-effect waves-button waves-default" data-uk-tooltip="{pos:'top', cls:'fs-16p'}" title="بارگذاری مجدد"><i class="material-icons" style="font-size:24px; vertical-align: -10px;">refresh</i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-content">
                <div id="manageradminmessages_crud">
                </div>
            </div>
        </div>

    </div>
</div>

@if (ViewBag.ShowPendingMessages != null && (bool)ViewBag.ShowPendingMessages)
{
    <span id="showpendingmessages" class="uk-hidden"></span>
}
