<body class="sidebar_main_open sidebar_main_swipe" style="position:relative;">
    <!-- main header -->
    <header id="header_main">
        <div class="header_main_content">
            <nav class="uk-navbar">
                <!-- main sidebar switch -->
                <a href="#" id="sidebar_main_toggle" class="sSwitch sSwitch_left" data-uk-tooltip="{pos:'bottom'}" title="مخفی کردن منو">
                    <span class="sSwitchIcon"></span>
                </a>
                @{ Html.RenderAction(MVC.Dashboard.Home.TopMenu());}                
            </nav>
        </div>
    </header><!-- main header end -->
    <!-- main sidebar -->
    <aside id="sidebar_main">
        <div class="sidebar_main_header">
            <div class="sidebar_logo">
                <a href="@Url.Action(MVC.Dashboard.Home.Index())" style="color: black;">
                    <img class="logo_regular" src="~/Content/admin/img/logo.png" alt="@ConfigurationManager.AppSettings["UniversityNameFa"]" title="@ConfigurationManager.AppSettings["UniversityNameFa"]" height="60" width="60" style="padding: 4px;" />
                    <span>@ConfigurationManager.AppSettings["SystemNameFa"]</span>
                </a>
