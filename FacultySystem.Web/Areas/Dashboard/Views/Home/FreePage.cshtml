@model ContentManagementSystem.Models.ViewModels.FreePageViewModel
@{
    ViewBag.Title = "صفحه آزاد";
    Layout = MVC.Dashboard.Shared.Views._ProfessorMasterLayout;
}

<!-- editor -->
<link rel="stylesheet" href="~/Content/trumbow/ui/trumbowyg.min.css" media="all">
<link href="~/Content/trumbow/plugins/colors/ui/trumbowyg.colors.min.css" rel="stylesheet" />

<div id="page_content">
    <div id="page_content_inner">
        <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium" data-uk-grid-margin>
            <div style="width: 100%;">
                <div class="md-card">
                    <div class="md-card-content">
                        <ul class="md-list md-list-addon md-list-right">
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-primary">notifications</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">توجه</span>
                                    <span class="uk-text-medium uk-text-muted">جهت فعالسازی/غیر فعالسازی صفحه آزاد خود به بخش تنظیمات مراجعه نمائید.</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-toolbar" style="padding-bottom: 7px;">
                <div class="md-card-toolbar-actions">
                    <button type="button" class="md-btn md-btn-success waves-button waves-effect waves-light editorsubmit" data-editor-id="freepagetext" data-isactive-id="IsActiveFreePage" data-submit-url="@Url.Action(MVC.Dashboard.Home.FreePage())"><i class="material-icons">save</i> ذخیره</button>
                </div>
                <h3 class="md-card-toolbar-heading-text uk-text-primary">
                    در این قسمت می توانید هر آنچه را که تمایل دارید وارد نمائید تا در صفحه آزاد شما به کاربران نمایش داده شود.
                </h3>
            </div>
            <div class="md-card-content">
                <div class="mGraph-wrapper">
                    <div id="freepagetext" style="margin-bottom: 8px;" placeholder="محتوای صفحه آزاد خودتان را در این قسمت وارد نمائید ..."></div>
                    <span name="message" class="uk-text-success"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="dataFreePageHtml" class="uk-hidden">@Html.Raw(Model.FreePageText)</div>

@section Scripts{
    <!--  editor -->
    <script src="~/Content/trumbow/trumbowyg.js"></script>
    <script src="~/Content/trumbow/plugins/colors/trumbowyg.colors.js"></script>
    <script src="~/Content/trumbow/langs/fa.min.js"></script>
    @*<script src="~/Content/trumbow/plugins/base64/trumbowyg.base64.min.js"></script>*@
    <script src="~/Content/trumbow/plugins/pasteimage/trumbowyg.pasteimage.min.js"></script>
    <script src="~/Content/trumbow/plugins/table/trumbowyg.table.js"></script>
}
