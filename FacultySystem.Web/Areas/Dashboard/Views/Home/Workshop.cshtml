@{
    ViewBag.Title = "دوره های آموزشی و کارگاه‌ها";
    Layout = MVC.Dashboard.Shared.Views._ProfessorMasterLayout;
}


<div id="page_content">
    <div id="page_content_inner">

        <h3 class="heading_b uk-margin-bottom">دوره های آموزشی و کارگاه‌ها</h3>

        <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium" data-uk-grid-margin>
            <div style="width: 100%;">
                <div class="md-card">
                    <div class="md-card-content">
                        <ul class="md-list md-list-addon md-list-right">
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-primary">notifications</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">توجه</span>
                                    <span class="uk-text-medium uk-text-muted">منظور از میزبان نام نهاد/موسسه ای می باشد که برگذار کننده دوره مربوطه می باشد، و همچنین منظور از مکان، نام مکان برگذاری دوره مربوطه می باشد.(در واقع نام میزبان و محل برگذاری لزوماً یکسان نمی باشند.)</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-content">
                <div id="workshops_crud">
                </div>
            </div>
        </div>

    </div>
</div>

<div class="md-fab-wrapper mb-30">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="#" id="recordAdd" data-uk-tooltip="{pos:'right', cls:'fs-16p'}" title="اضافه کردن رکورد جدید">
        <i class="material-icons"></i>
    </a>
</div>

<span id="variables" class="display-hidden" data-list-url="@Url.Action(MVC.Dashboard.Workshop.List())"
                             data-create-url="@Url.Action(MVC.Dashboard.Workshop.Create())"
                             data-update-url="@Url.Action(MVC.Dashboard.Workshop.Update())"
                             data-delete-url="@Url.Action(MVC.Dashboard.Workshop.Delete())"></span>