@model ContentManagementSystem.Models.ViewModels.WeeklyProgramDetailsViewModel
@{
    ViewBag.Title = "برنامه هفتگی";
    Layout = MVC.Dashboard.Shared.Views._ProfessorMasterLayout;
}


<div id="page_content">
    <div id="page_content_inner">

        <h3 class="heading_b uk-margin-bottom">برنامه هفتگی</h3>

        <div class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-2 uk-grid-medium" data-uk-grid-margin>
            <div style="width: 100%;">
                <div class="md-card">
                    <div class="md-card-content">
                        <ul class="md-list md-list-addon md-list-right">
                            <li>
                                <div class="md-list-addon-element">
                                    <i class="md-list-addon-icon material-icons uk-text-primary">notifications</i>
                                </div>
                                <div class="md-list-content">
                                    <span class="md-list-heading">توجه</span>
                                    <span class="uk-text-medium uk-text-muted">جهت فعالسازی/غیر فعالسازی برنامه هفتگی خود به بخش تنظیمات مراجعه نمائید.</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-content">
                <div class="md-card-toolbar-actions">
                    <h5>بازه برنامه هفتگی و در صورت نیاز توضیحات کلی برنامه هفتگی خود را در این قسمت وارد نمائید.</h5>
                </div>
                <form method="post" class="ajaxsubmit" action="@Url.Action(MVC.Dashboard.Professor.WeeklyProgram())">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-small-1-1 uk-width-medium-1-10 uk-width-large-1-10 uk-width-xLarge-1-10">
                            <div class="md-input-wrapper">
                                <label>از تاریخ</label>
                                <input type="text" readonly="readonly" autocomplete="off" class="md-input" id="startdate" name="startdate"><span class="md-input-bar "></span>
                            </div>
                        </div>
                        <div class="uk-width-small-1-1 uk-width-medium-1-10 uk-width-large-1-10 uk-width-xLarge-1-10">
                            <div class="md-input-wrapper">
                                <label>تا تاریخ</label>
                                <input type="text" readonly="readonly" autocomplete="off" class="md-input" id="enddate" name="enddate"><span class="md-input-bar "></span>
                            </div>
                        </div>
                        <div class="uk-width-small-1-1 uk-width-medium-3-10 uk-width-large-3-10 uk-width-xLarge-3-10">
                            <div class="md-btn-group">
                                <button type="submit" id="save-programdetails" class="md-btn md-btn-success waves-effect waves-button waves-light fs-16p"><i class="material-icons" style="font-size:22px; vertical-align: -6px;">save</i> ذخیره</button>
                            </div>
                        </div>
                    </div>
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-small-1-1 uk-width-medium-1-1 uk-width-large-1-1 uk-width-xLarge-1-1">
                            <div class="md-input-wrapper"><label>توضیحات</label><textarea id="description" name="description" rows="2" class="md-input">@Model.Description</textarea><span class="md-input-bar "></span></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="md-card">
            <div class="md-card-toolbar">
                <div class="md-card-toolbar-actions">
                    <label for="DayOfProgram" style="font-size:18px; vertical-align: 12px;">روز:&nbsp;&nbsp;</label>
                    <select id="DayOfProgram" data-md-selectize>
                        <option value="0" selected>تمامی روزها</option>
                        <option value="1">شنبه</option>
                        <option value="2">یکشنبه</option>
                        <option value="3">دوشنبه</option>
                        <option value="4">سه شنبه</option>
                        <option value="5">چهارشنبه</option>
                        <option value="6">پنجشنبه</option>
                        <option value="7">جمعه</option>
                    </select>
                </div>
            </div>
            <div class="md-card-content">
                <div id="weeklyprograms_crud">
                </div>
            </div>
        </div>

    </div>
</div>

<div class="md-fab-wrapper mb-30">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="#" id="recordAdd" data-uk-tooltip="{pos:'right', cls:'fs-16p'}" title="اضافه کردن برنامه جدید">
        <i class="material-icons"></i>
    </a>
</div>

<span id="variables" class="display-hidden" data-list-url="@Url.Action(MVC.Dashboard.WeeklyProgram.ActionNames.List, MVC.Dashboard.WeeklyProgram.Name)"
                             data-create-url="@Url.Action(MVC.Dashboard.WeeklyProgram.Create())"
                             data-update-url="@Url.Action(MVC.Dashboard.WeeklyProgram.Update())"
                             data-delete-url="@Url.Action(MVC.Dashboard.WeeklyProgram.Delete())"></span>

@section scripts {
    <script>
        var startDate = '@(Model.StartDate ?? string.Empty)';
        var endDate = '@(Model.EndDate ?? string.Empty)';
    </script>    
}
