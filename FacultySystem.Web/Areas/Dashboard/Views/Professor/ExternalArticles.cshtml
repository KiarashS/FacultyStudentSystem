        <div class="md-card">
            <div class="md-card-content">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                        <div class="md-input-wrapper"><label>عنوان</label><input type="text" data-parsley-required="true" class="md-input" id="filter-title" name="filter-title"><span class="md-input-bar "></span></div>
                    </div>
                    <div class="uk-width-small-1-1 uk-width-medium-2-10 uk-width-large-2-10 uk-width-xLarge-2-10">
                        <div class="md-btn-group">
                            <button type="button" id="professor-externalarticles-search" class="md-btn md-btn-primary md-btn-large waves-effect waves-button waves-light"><i class="material-icons" style="font-size:24px; vertical-align: -10px;">search</i> جستجو</button>
                            <button type="button" id="professor-externalarticles-refresh" class="md-btn md-btn-large waves-effect waves-button waves-default" data-uk-tooltip="{pos:'top', cls:'fs-16p'}" title="بارگذاری مجدد"><i class="material-icons" style="font-size:24px; vertical-align: -10px;">refresh</i></button>
