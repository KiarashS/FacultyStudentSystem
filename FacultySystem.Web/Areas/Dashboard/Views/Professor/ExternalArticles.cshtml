                    </div>
                </div>
            </div>
        </div>

        <div class="md-card">
            @if (Convert.ToBoolean(ConfigurationManager.AppSettings["EnableArticleFetcher"]))
            {
            <div class="md-card-toolbar" style="padding-bottom: 7px !important;">
                <div class="md-card-toolbar-actions">
                    <a id="update-externalarticles-list" class="md-btn md-btn-warning waves-effect waves-button waves-green"><i class="material-icons">system_update_alt</i>&nbsp;استخراج مقالات</a>
